= form_for(@post) do |f|
  - if @post.errors.any?
    #error_explanation
      %h2
        = pluralize(@post.errors.count, "error")
        prohibited this post from being saved:
      %ul
        - @post.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :title
    %br/
    = f.text_field :title
  .wysiwyg
    = f.label :text
    %br/
    = f.text_area :text, size: '40x5'
  / :javascript
  /   $('.wysiwyg').wysihtml5({toolbar: { color: true } });
  .actions
    = f.submit
